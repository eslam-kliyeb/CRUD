
@{
    ViewData["Title"] = "CheckYourInbox";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<div asp-validation-summary="All" class="text-danger"></div>
<div class="auth-main">
    <div class="auth-wrapper v3">
        <div class="auth-form">
            <div class="card mt-5">
                <div class="card-body">
                    <a class="d-flex justify-content-center mt-3">
                        <img src="~/dashboard/assets/images/crud.jpg" height="50" width="100">
                    </a>
                    <div class="row">
                        <div class="d-flex justify-content-center">
                            <div class="auth-header">
                                <h2 class="text-secondary mt-5"><b>Check Your Inbox</b></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}


