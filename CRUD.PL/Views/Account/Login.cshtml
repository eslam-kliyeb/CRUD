@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<div asp-validation-summary="All" class="text-danger"></div>
<div class="auth-main">
    <div class="auth-wrapper v3">
        <div class="auth-form">
            <div class="card mt-5">
                <div class="card-body">
                    <a class="d-flex justify-content-center mt-3">
                        <img src="~/dashboard/assets/images/crud.jpg" height="50" width="100">
                    </a>
                    <div class="row">
                        <div class="d-flex justify-content-center">
                            <div class="auth-header">
                                <h2 class="text-secondary mt-5"><b>Sign in</b></h2>
                                <p class="f-16 mt-2">Enter your credentials to continue</p>
                            </div>
                        </div>
                    </div>
                    <form asp-action="Login" asp-controller="Account" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Email Address">
                            <label asp-for="Email">Email Address</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" placeholder="Password">
                            <label asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid mt-4">
                            <button type="Submit" class="btn btn-secondary p-2">Sign In</button>
                        </div>
                    </form>
                    <hr>
                    <div class="d-grid mt-2">
                        <a asp-action="Register" asp-controller="Account" class="btn btn-secondary p-2">Create account</a>
                    </div>
                    <div class="d-grid mt-2">
                        <a asp-action="ForgetPassword" asp-controller="Account" class="btn btn-secondary p-2">Forget Password</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}


