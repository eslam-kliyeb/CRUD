@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_Notifications"></partial>
<br />
<br />
<br />
<br />
@if (Model.Count() > 0)
{
    <br />
    <br />
    <div class="mt-2">
        <form class="row offset-1" asp-action="Index" asp-controller="User" method="get">
            <div class="input-group mb-3">
                <input class="form-control" type="text" placeholder="User's Email" name="searchValue" value="@ViewBag.SearchValue" />
                <div class="input-group-append">
                    <button class="btn" style="background-color: #e9d5ff !important; color: #7a20df !important;" type="submit">Search</button>
                </div>
            </div>
        </form>
    </div>
    <br />
    <table class="table table-striped table-hover">
        <thead class="bg-purple-200">
            <tr>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.FName)</th>
                <th>@Html.DisplayNameFor(D => D.LName)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr class="bg-purple-100">
                    <td>@User.Id</td>
                    <td>@User.FName</td>
                    <td>@User.LName</td>
                    <td>@User.Email</td>
                    <td>@string.Join(" ",User.Roles)</td>
                    <td><a asp-action="Details" asp-route-Id="@User.Id"><i class="fas fa-eye"></i></a></td>
                    <td><a asp-action="Edit" asp-route-Id="@User.Id"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-route-Id="@User.Id"><i class="fa fa-trash"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no Users</h3>
    </div>
}

