@model UserViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit @Model.FName User</h1>
<div asp-validation-summary="All"></div>
<br />
<form asp-action="Edit" asp-controller="User" method="post">
    @await Html.PartialAsync("~/Views/User/PartialViews/CreateEditPartialView.cshtml", Model)
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" asp-controller="User" class="btn btn-light">Back To List</a>
</form>
@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}

