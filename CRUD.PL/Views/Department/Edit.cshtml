@model DepartmentViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name Department</h1>
<div asp-validation-summary="All"></div>
<br />
<form asp-action="Edit" asp-controller="Department" method="post">
    @await Html.PartialAsync("~/Views/Department/PartialViews/CreateEditPartialView.cshtml",Model)
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" asp-controller="Department" class="btn btn-light">Back To List</a>
</form>
@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}