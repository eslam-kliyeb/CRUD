@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Department";
}
<partial name="_Notifications"></partial>
<br />
<br />
<br />
<br />
<a asp-action="Create" asp-controller="Department" class="btn" style="background-color: #e9d5ff !important; color: #7a20df !important;">Create New Department</a>
<a asp-action="DepartmentsPdf" asp-controller="Department" class="btn" style="background-color: #e9d5ff !important; color: #7a20df !important;">Departments As Pdf</a>
@if(Model.Count()>0){
    <br />
    <br />
    <div class="mt-2">
        <form class="row offset-1" asp-action="Index" asp-controller="Department" method="get">
            <div class="input-group mb-3">
                <input class="form-control" type="text" placeholder="Department's Name" name="searchValue" value="@ViewBag.SearchValue" />
                <div class="input-group-append">
                    <button class="btn" style="background-color: #e9d5ff !important; color: #7a20df !important;" type="submit">Search</button>
                </div>
            </div>
        </form>
    </div>
    <br />
    <table class="table table-striped table-hover">
        <thead class="bg-purple-200">
            <tr>
                <th >@Html.DisplayNameFor(D=>D.Code)</th>
                <th >@Html.DisplayNameFor(D=>D.Name)</th>
                <th >@Html.DisplayNameFor(D=>D.DateOfCreation)</th>
                <th >Details</th>
                <th >Update</th>
                <th >Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr class="bg-purple-100">
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <partial name="_Buttons" model="@department.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is no Departments</h3>
    </div>
}
